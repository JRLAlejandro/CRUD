naranja = #F0831D
negro = #383837
blanco = #FAFAF7
azul = #2A8AE4
rojo = #D03F3F
	
body
	background blanco
	color negro
	text-size 16px

header
	h1
		background negro
		color blanco
		height 100%
		margin 0
		text-align center
		width 100%

.cabecera
	th
		padding 2em

.crear
	background #2DC083
	border-radius 5px
	box-shadow 0 5px 10px negro
	color rgba(255,255,255,0.9)
	display inline-block
	margin 1em
	padding 0.5em
	text-decoration none
	postion absolute
	-webkit- transition 2s

	&:hover
		width 12em
		height 1.5em

.cuerpo
	td
		padding 1em

.formulario
	input[type="text"]
		
		border-radius 0.3em
		box-shadow 0 5px 10px negro
		margin 0em 1em
		padding 0.4em

	input[type="number"]
		
		border-radius 0.3em
		box-shadow 0 5px 10px negro
		margin 0em 1em
		padding 0.4em

	input[type="submit"]
	
		background naranja
		border 1px solid naranja
		border-bottom 3px solid naranja
		border-radius 0.2em
		box-shadow 0 5px 10px negro
		color blanco
		display inline-block
		margin 0 0 0 2em
		margin-top 0.5em
		padding 0.6em 0.5em
		width 6em

.informacion
	margin 0 0 0 2em


.personaje
	margin 1em
	
	.eliminar
		background rojo

		&:hover
			background naranja
			color #000

	.nombre
		color negro

	.update
		background azul

		&:hover
			background #36E5E2
			color negro

	.update
	.eliminar
		border-radius 0.2em
		box-shadow 0 5px 10px negro
		color blanco
		text-decoration none
		postion absolute

	.nombre
	.eliminar
	.update
		margin 2em
		padding 0.5em

.regresar
	background naranja
	border-radius 0.2em
	box-shadow 5px 5px 10px negro
	color blanco
	display inline-block
	margin 1em 0 0 2em
	padding 0.5em
	text-decoration none